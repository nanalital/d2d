.row
  .span6.offset3
    - form_tag url(:sessions, :create), :class=>'login form-horizontal' do
      .login-body.modal-body
        = [:error, :warning, :notice].map { |type| flash_tag(type, :class => "alert alert-#{type} fade in", :bootstrap => true) }.join.html_safe

        %fieldset.control-group
          %label.login-input-label.control-label{:for => :old_id} ID
          .login-controls.controls=text_field_tag :old_id, :value => params[:old_id], :autofocus => true
        %fieldset.control-group
          %label.login-input-label.control-label{:for => :password}= pat('login.password')
          .login-controls.controls=password_field_tag :password, :value => params[:password]

      .login-footer.modal-footer
        =submit_tag(pat('login.sign_in'), :class => 'btn btn-primary pull-right')
