-# coding: utf-8
!!!
%html{:lang => "en"}
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:400,700&subset=latin,latin-ext", :rel=>'stylesheet', :type=>'text/css'}/
    %meta{:charset => "utf-8"}/
    %title= @title ? @title + ' ' + $title : $title
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => 'text/html;charset=UTF-8', 'http-equiv' => "content-type"}/
    %meta{:content => $pagedesc, :name => "description"}/
    %meta{:content => $pageauthor, :name => "author"}/
    %meta{:content => $pagekeyws, :name => "keywords"}/

    %link{:href => "/stylesheets/bootstrap.less", :rel => "stylesheet/less"}/
    %script{:src => "/javascripts/less.js"}
    /=stylesheet_link_tag 'bootstrap'
    =javascript_include_tag 'jquery', 'collapse', 'tab', 'transition', 'dropdown'
    =yield_content :include

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    %link{:href => "/images/favicon.ico", :rel => "shortcut icon"}/
    / %link{:href => "assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    / %link{:href => "assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    / %link{:href => "assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/

  %body{"data-offset" => "50", "data-spy" => "scroll", "data-target" => ".subnav"}
    #top.contentwrapper
      .navbar
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"} D2D
            .nav-collapse.collapse
              %ul.nav.pull-right
                %li
                  %a{:href=>'/new'} New Supporter
                %li.divider-vertical
                -if current_account.nil?
                  %li
                    %a{:href=>'/admin/sessions/new'} Login
                -else
                  %li.dropdown#user
                    = current_account.name
      .container
        %header.jumbotron.masthead
          .alert.hide=[:error, :warning, :notice].map { |type| flash_tag(type, :class => "message #{type}") }.join
          =yield_content :outer
          .inner= yield
      .push
    %footer.footer
      .container
        .row
          .span12
            #footerbottom
              %a.large{:href=>'http://greenpeace.org.il/'} Greenpeace Israel
              %span.large , 2013
              .pull-right
                #totop.btn.btn-inverse{:onclick=>'window.location = "#top";'} ^


